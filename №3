import java.util.Scanner;

class Product {
    private int calories = 0;   
    private double cost = 0;      

    public void init(int calories, double cost) {
        this.calories = calories;
        this.cost = cost;
    }

    public void read(Scanner sc) {
        System.out.print("Введите калорийность на 100 г: ");
        calories = sc.nextInt();

        System.out.print("Введите стоимость на 100 г: ");
        cost = sc.nextDouble();
    }

    public void display() {
        System.out.println("Калорийность: " + calories + " ккал/100г");
        System.out.println("Стоимость: " + cost + " руб/100г");
        System.out.printf("Ценность (стоимость/калорийность): %.2f", value());
        System.out.println();
    }

    public double value() {
        if (calories != 0) {
            return  cost/calories;
        }
        return 0;
    }
}

        class Diet {
            private String name;
            private Product product1 = new Product();
            private Product product2 = new Product();
            private Product product3 = new Product();
            private int amounts1 = 0;
            private int amounts2 = 0;
            private int amounts3 = 0;

        public void init(String name, Product product1, int amounts1, Product product2, int amounts2, Product product3, int amounts3) {
            this.name = name;
            this.product1 = product1;
            this.amounts1 = amounts1;
            this.product2 = product2;
            this.amounts2 = amounts2;
            this.product3 = product3;
            this.amounts3 = amounts3;
        }

    public void read() {
        Scanner sc = new Scanner(System.in);
        System.out.println("Введите название диеты");
        this.name = sc.nextLine();
        System.out.println("Введите данные первого продукта");
        product1.read(sc);
        System.out.print("Введите количество в граммах: ");
        this.amounts1 = sc.nextInt();
        System.out.println("Введите данные второго продукта");
        product2.read(sc);
        System.out.print("Введите количество в граммах: ");
        this.amounts2 = sc.nextInt();
        System.out.println("Введите данные третьего продукта");
        product3.read(sc);
        System.out.print("Введите количество в граммах: ");
        this.amounts3 = sc.nextInt();
    }

    public void display() {
        System.out.println("Название диеты - " + name);
        System.out.println("Первый продукт");
        product1.display();
        System.out.println("Грам продукта - " + amounts1 + " гр" + "\n");
        System.out.println("Второй продукт");
        product2.display();
        System.out.println("Грам продукта - " + amounts2 + " гр" + "\n");
        System.out.println("Третий продукт");
        product3.display();
        System.out.println("Грам продукта - " + amounts3 + " гр" + "\n");
    }

    public double allAmount() {
        return ((product1.value() * amounts1 + product2.value() * amounts2 + product3.value() * amounts3) / 100);

    }

    public double bestProduct() {
        Product best = product1;
        if (product2.value() > best.value()) {
            best = product2;
        }
        if (product3.value() > best.value()) {
            best = product3;
        }

        return best.value();
    }

}

class Main {
    public static void main(String[] args) {

        Product cucumber = new Product();
        Product salad = new Product();
        Product tomato = new Product();
        cucumber.init(15,30);
        salad.init(15,50);
        tomato.init(15,100);

        Diet diet = new Diet();
        Diet diet1 = new Diet();
        diet1.read();
        diet.init("Веганская", cucumber, 150, salad, 100, tomato, 500);
        diet.display();
        diet1.display();

        System.out.printf("Общая ценность первой диеты - %.2f руб/калл" + "\n" , diet.allAmount());
        System.out.println("Ценность лучшего продукта в первой диете - " + diet.bestProduct() + " руб/калл");
        System.out.printf("Общая ценность второй диеты - %.2f руб/калл" + "\n" , diet1.allAmount());
        System.out.println("Ценность лучшего продукта во второй диете - " + diet1.bestProduct() + " руб/калл");
    }
}
